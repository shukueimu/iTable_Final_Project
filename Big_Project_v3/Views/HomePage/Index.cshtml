												<input type="hidden" name="time" id="selectedTime_${index}">
												<input type="hidden" name="restaurantName" id="selectedRestaurant_${index}" value="${restaurant.RestaurantID}">
											</form>
											${generateTimeButtons(restaurant.RestaurantID, index)}
										</div>
									</div>
								</div>
							</div>
								<form id="hiddenForm_${index}" method = "POST" action="/Home?restaurantId=${restaurant.RestaurantID}" style="display:none;" >
								<input type="hidden" name="restaurantName" value="${restaurant.RestaurantID}">
							</form>`;
		});

		pageHtml += `</div></div>`;
		carouselInner.innerHTML = pageHtml;
	}

	function submitFormIfNoButton(event, formId) {
		if (!event.target.closest('.time-buttons')) {
			document.getElementById(formId).submit();
		}
	}




